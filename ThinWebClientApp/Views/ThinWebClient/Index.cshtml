@model ThinWebClientModelStart
@{
    ViewData["Title"] = "Start";
}

<h2 class="title is-4">@ViewData["Title"]</h2>

<div class="box">
    <div class="content">

        <div class="field">
            <label class="label">接続先コンピュータ ID:</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-link" type="text" placeholder="コンピュータ ID を指定してください。" name="Pcid" value="@Model.Pcid">
                <span class="icon is-small is-left">
                    <i class="fas fa-laptop"></i>
                </span>
            </div>
            <p class="help is-primary">
                コンピュータ ID を指定してください。
            </p>
        </div>
        <p>　</p>
    </div>
</div>

@section Scripts {
    <script>
        Main.TestFunc();
    </script>
}

